<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
<display-name>PayKick App</display-name>

<welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
</welcome-file-list>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.epam.javalab13.filter.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>JSPFilter</filter-name>
    <filter-class>com.epam.javalab13.filter.JSPFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>JSPFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>HomeServlet</servlet-name>
    <servlet-class>com.epam.javalab13.servlet.HomeServlet</servlet-class>
  </servlet>
  <servlet>
  	<description>
  	</description>
  	<display-name>LiqpayCallbackServlet</display-name>
  	<servlet-name>LiqpayCallbackServlet</servlet-name>
  	<servlet-class>com.epam.javalab13.servlet.payment.LiqpayCallbackServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>HomeServlet</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>LiqpayCallbackServlet</servlet-name>
  	<url-pattern>/LiqpayCallbackServlet</url-pattern>
  </servlet-mapping>


</web-app>
